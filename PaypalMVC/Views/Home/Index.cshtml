<h2>@ViewBag.Message</h2>

@using (Html.BeginForm("PaypalView", "Home"))
{
    <head>
        <script src="https://www.paypalobjects.com/api/checkout.js"></script>

        <title>Paypal</title>
    </head>
    <body>
        <div>
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td>Item: </td>
                    <td>
                        <input type="text" name="item" value="TestItem" readonly />
                    </td>
                </tr>

                <tr>
                    <td>Price: </td>
                    <td>
                        <input type="text" name="amount" value="10000" readonly />
                    </td>
                </tr>

                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="btnsubmit" value="PayPal">
                    </td>
                </tr>
            </table>
        </div>
    </body>
}